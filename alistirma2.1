        print("Hatalı giriş. Lütfen tekrar dene.")
    elif tahmin[0]!=sayı[0] and tahmin[1]!=sayı[1]:
        print("doğruyer:0, yanlışyer:-2")
    elif (tahmin[0]==sayı[0] and tahmin[1]!=sayı[1]) or (tahmin[0]!=sayı[0] and tahmin[1]==sayı[1]):
        print("doğruyer:1, yanlışyer:-1")
    elif tahmin[0]==sayı[0] or tahmin[1]==sayı[1]:
        print("Tebrikler, doğru tahmin!")
